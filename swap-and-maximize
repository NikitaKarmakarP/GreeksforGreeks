#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

class Solution {
public:
    int maxAbsoluteDifferenceSum(vector<int>& arr) {
        sort(arr.begin(), arr.end());

        vector<int> reordered;
        int n = arr.size();
        
        // Reorder by alternating max and min
        int left = 0, right = n - 1;
        while (left <= right) {
            if (left <= right) reordered.push_back(arr[right--]);
            if (left <= right) reordered.push_back(arr[left++]);
        }
        
        // Calculate the sum of absolute differences
        int max_sum = 0;
        for (int i = 0; i < n; ++i) {
            max_sum += abs(reordered[i] - reordered[(i + 1) % n]);
        }
        
        return max_sum;
    }
};

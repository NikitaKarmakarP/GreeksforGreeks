class Solution {
  public:
    int getMinDiff(int k, vector<int> &arr) {
        sort(arr.begin(),arr.end());
        int ans=arr.back()-arr[0];
        for(int i=1;i<arr.size();i++){
            int mini=min(arr[i]-k,arr[0]+k);
            int maxi=max(arr.back()-k,arr[i-1]+k);
            ans=min(ans,maxi-mini);
        }
        return ans;
    }
};


class Solution:
    # Function to sort an array of 0s, 1s, and 2s
    def sort012(self, arr):
        # code here
        
        res = []
        for i in arr:
            if i == 0:
                res.append(0)
        for j in arr:
            if j == 1:
                res.append(j)
        for k in arr:
            if k ==2:
                res.append(k)
        arr[::] = res[::]
